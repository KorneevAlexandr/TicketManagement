@using Microsoft.AspNetCore.Mvc.Localization;

@model TicketManagement.ClientModels.Accounts.RegisterModel
@inject IViewLocalizer Localizer; 

@{
	ViewData["Title"] = Localizer["TitleName"];
}

<link rel="stylesheet" href="~/css/login.css" />

<form class="form-register" asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
	<h3>@Localizer["SignName"]</h3>
	<div class="form-left">
		<div>
			<label asp-for="Name">@Localizer["EnterName"]</label>
			<input maxlength="30" required asp-for="Name" />
			<span asp-validation-for="Name" />
		</div>
		<div>
			<label asp-for="Surname">@Localizer["EnterSurname"]</label>
			<input maxlength="40" required asp-for="Surname" />
			<span asp-validation-for="Surname" />
		</div>
		<div>
			<label asp-for="Age">@Localizer["EnterAge"]</label>
			<input type="number" required max="120" min="3" asp-for="Age" />
			<span asp-validation-for="Age" />
		</div>
		<div>
			<label asp-for="Email">@Localizer["EnterEmail"]</label>
			<input type="email" required maxlength="40" asp-for="Email" />
			<span asp-validation-for="Email" />
		</div>
	</div>

	<div class="form-right">
		<div>
			<label asp-for="Login">@Localizer["EnterLogin"]</label>
			<input type="text" required maxlength="60" asp-for="Login" />
			<span asp-validation-for="Login" />
		</div>
		<div>
			<label asp-for="Password">@Localizer["EnterPassword"]</label>
			<input asp-for="Password" required maxlength="60" />
			<span asp-validation-for="Password" />
		</div>
		<div>
			<label asp-for="ConfirmPassword">@Localizer["RepeatPassword"]</label>
			<input asp-for="ConfirmPassword" />
			<span asp-validation-for="ConfirmPassword" />
		</div>
		<div>
			<input class="input-sign-in" type="submit" value="@Localizer["SignUp"]" />
			<a asp-action="Login" asp-controller="Account" class="input-sign-up">@Localizer["SignIn"]</a>
		</div>
	</div>
</form>


<div class="register-validation" asp-validation-summary="All"></div>
