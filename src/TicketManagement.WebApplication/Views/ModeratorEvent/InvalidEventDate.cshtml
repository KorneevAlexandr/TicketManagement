@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@{
	ViewData["Title"] = Localizer["Title"];
}

<style>
	.error-block {
		width: 60%;
		margin-top: 5%;
		margin-left: 20%;
		box-shadow: 0px 0px 10px #32AFED;
		padding-top: 1.5%;
		padding-bottom: 2%;
	}

	.error-name {
		width: 50%;
		margin-left: 25%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	.error-data {
		width: 80%;
		margin-left: 10%;
		margin-top: 3%;
		font-size: 22px;
		text-align: justify;
	}
</style>

<div class="error-block">
	<h2 class="error-name">@Localizer["NameError"]</h2>
	<div class="error-data">@Localizer["Data"]</div>
</div>
